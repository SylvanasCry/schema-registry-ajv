{
  "name": "@sylvanas-cry/schema-registry-ajv",
  "version": "2.1.1",
  "description": "An Ajv instance wrapper for @kafkajs/confluent-schema-registry.",
  "repository": {
    "url": "git@github.com:SylvanasCry/schema-registry-ajv.git"
  },
  "homepage": "https://github.com/SylvanasCry/schema-registry-ajv",
  "author": {
    "name": "Sylvanas Cry",
    "email": "sylvanas@gmx.us"
  },
  "keywords": [
    "confluent schema registry",
    "schema-registry",
    "kafka",
    "ajv"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf dist",
    "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings=0",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r ts-node/register node_modules/.bin/jest --runInBand",
    "prebuild": "npm run clean",
    "build": "tsc --build tsconfig.build.json",
    "postbuild": "cp package.json README.md dist/"
  },
  "peerDependencies": {
    "@kafkajs/confluent-schema-registry": ">= 3.3.0",
    "ajv": ">= 8.12.0",
    "ajv-formats": ">= 2.1.1",
    "axios": ">= 1.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-angular": "^17.6.7",
    "@kafkajs/confluent-schema-registry": "^3.3.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^10.0.4",
    "@sylvanas-cry/eslint-config": "^1.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.4.0",
    "eslint": "^8.46.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "nock": "^13.3.2",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.0.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "extends": "@sylvanas-cry/eslint-config",
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        [
          "start-case",
          "sentence-case"
        ]
      ]
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "release": {
    "branches": [
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
